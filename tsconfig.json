{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true,                   
    "module": "commonjs",                                
    "moduleResolution": "node10",                     
    "baseUrl": "./",                                  
    "paths": {
      "*": ["*", "*.js"]
    },                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
